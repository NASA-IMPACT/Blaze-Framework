spring.main.allow-bean-definition-overriding=true
spring.datasource.url=jdbc:h2:~/mft_db;DB_CLOSE_ON_EXIT=FALSE;DB_CLOSE_DELAY=-1;
spring.jpa.hibernate.ddl-auto=update

consul.host={{ private_ip }}
grpc.port=7003
resource.service.host=localhost
resource.service.port=7003
secret.service.host=localhost
secret.service.port=7003
consul.port=8500
agent.id=local-agent
agent.concurrent.transfers=8
agent.concurrent.chunked.threads=20
agent.chunk.size=10
agent.chunk.streaming.enabled=false
agent.transport.directory=${AIRAVATA_HOME}/plugins
overwrite.existing=true
agent.temp.data.dir=/tmp